<!DOCTYPE html>
<html>
    {% block head %}
    <head>
        <!-- jQuery -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" integrity="sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ==" crossorigin="anonymous">

        <!-- Optional theme -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css" integrity="sha384-aUGj/X2zp5rLCbBxumKTCw2Z50WgIr1vs/PFN4praOTvYXWlVyh2UtNUU0KAUhAX" crossorigin="anonymous">

        <!-- Latest compiled and minified JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js" integrity="sha512-K1qjQ+NcF2TYO/eI3M6v8EiNYZfA95pQumfvcVrTHtwQVDG+aHRqLi/ETn2uB+1JqwYqVG3LIvdm9lj6imS/pQ==" crossorigin="anonymous"></script>

        <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/themes/smoothness/jquery-ui.css">
		<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script>

        
        <link rel="stylesheet" href="css/style.css">
        <script src="js/script.js"></script>
        <title>Todo-App</title>
    </head>
    {% endblock %}
    <body>
        <div id="site" class="container">
        	<div id="header">
        		{% include 'header/header.twig' %}
        	</div>
            <div id="content">
                {% block contentHead %}
            	<h1>My Todo List</h1>
                <div class="todo__controls">
                    <button class="todo__add btn btn-default" type="submit">
                        <span class="glyphicon glyphicon-star" aria-hidden="true"></span> New Todo Item
                    </button>
                </div>
                {% endblock %}
                {% block form %}
                <div class="todo__form">
                    {% include 'components/form.twig' %}
                </div>
                {% endblock %}
                <div class="todolist-container">
                    <h3>List of Todo Items</h3>
                    <ul id="todolist" class="list-group">
                        {% for item in todos %}
                            <li class="todo_{{ item.id }} todo__item list-group-item" data-id="{{ item.id }}">
                                <h5 class="item_container list-group-item-heading">
                                    <span class="todo__title ">{{ item.title }}</span>
                                    <span class="item__controls pull-right">
                                        <input class="control__item done" type="checkbox" name="todo_{{ item.id }}" 
                                            {% if item.done %}
                                                checked="checked"
                                            {% endif %}
                                        >
                                        <span class="control__item sort glyphicon glyphicon-move" aria-hidden="true"></span>
                                        <span class="control__item delete glyphicon glyphicon-trash" aria-hidden="true"></span>
                                        <a href="todo/edit/{{ item.id }}"><span class="control__item edit glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                                    </span>
                                </h5>
                                <div class="todo__body list-group-item-text">{{ item.body }}</div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div id="footer">
        		{% include 'footer/footer.twig' %}
            </div>
        </div>
    </body>
</html>